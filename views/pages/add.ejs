<!doctype html>
<html>
  <head>
    <% include ../partials/head %>
    <script>
      function valueChange(value) {
        if (value.length != 0) {
          $("#value_approx_div").show();
        } else {
          $("#value_approx_div").hide();
        }
      }
    </script>
  </head>
  <body>
    <% include ../partials/navigation %>
    <div class="container">
      <div class="jumbotron text-center">
        <h1>Add item</h1>
      </div>
    </div>
    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">
        <% include ../partials/message %>

        <!-- New collection form -->
        <form action="/add" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="description" autofocus>
          </div>
          <div class="form-group">
            <label>Value</label>
            <input type="text" pattern="[0-9]{*}" title="Value in whole pounds" class="form-control" name="value" onchange="valueChange(value)">
          </div>
          <div class="form-check" id="value_approx_div" style="display:none">
            <input id="value_approx_checkbox" type="checkbox" class="form-check-input" name="value_approximate">
            <label id="value_approx_label" class="form-check-label">Value is approximate</label>
          </div>
          <div class="form-group">
            <label>Choose photo</label>
            <input class="form-control-file" type="file" accept=".jpg, .jpeg, .png" name="item_photo">
          </div>

          <button type="submit" class="btn btn-primary btn-lg">Create</button>
        </form>
      </div>
    </div>
  </body>
</html>
